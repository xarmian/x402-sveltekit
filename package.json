{
  "name": "x402-sveltekit",
  "version": "0.1.0",
  "description": "SvelteKit middleware for x402 HTTP payment protocol",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@x402/core": "^2.2.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "@x402/evm": "^2.2.0",
    "@x402/svm": "^2.2.0",
    "@x402/avm": "^2.2.0"
  },
  "peerDependenciesMeta": {
    "@x402/evm": {
      "optional": true
    },
    "@x402/svm": {
      "optional": true
    },
    "@x402/avm": {
      "optional": true
    }
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.50.0",
    "@types/node": "^25.2.0",
    "@x402/evm": "^2.2.0",
    "@x402/svm": "^2.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "x402",
    "sveltekit",
    "payment",
    "middleware",
    "402",
    "crypto",
    "blockchain"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xarmian/x402-sveltekit"
  }
}
